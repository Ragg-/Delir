@import '../../styles/_variables'
@import '../../styles/_mixins'

.timelineView
    display flex
    height 50%
    flex none
    font-size 12px

    :global
        .--col-name
            display inline-flex
            align-items center
            flex 1
            overflow hidden
            white-space normal
            text-overflow ellipsis

        .--col-visibility
        .--col-lock
            display inline-flex
            align-items center
            width 16px

        .timeline-labels-container
            display flex
            flex-direction column
            width 220px
            flex none
            background-color $pane-background

        .timeline-labels-header
            display flex
            width 100%
            height 30px
            border-bottom 1px solid rgba(#fff, .4)

        .timeline-labels
            thin-scrollbar()

            display block
            flex 1
            overflow auto
            padding-bottom 20px

            .timeline_lane-label
                display flex
                flex-wrap wrap
                width 100%
                height 24px
                // padding 2px
                // padding-left 4px
                border-bottom 1px solid rgba(#fff, .1)
                line-height 1.6
                vertical-align middle

                &.--expand
                    height auto

                .timeline_lane-props
                    min-width 100%
                    background-color $pane-background

                .timeline_lane-prop
                    display flex
                    height 24px
                    justify-content space-between
                    text-indent 1rem

                    .timeline_lane-prop_label
                        width 40%
                        text-overflow ellipsis
                        white-space nowrap

                    .timeline_lane-prop_inputs
                        flex 1

                        ._drag-number-input
                            width 4rem
                        .separator
                            width 1rem

            .timeline_lane-label_col
                // display table-cell
                display inline-block
                padding 2px 0

                &:first-child
                    padding-left 2px
                &:last-child
                    padding-right 2px

                &.--col-name
                    // width 100px
                    flex 1
                    overflow hidden
                    white-space normal
                    text-overflow ellipsis

                &.--col-visibility
                &.--col-lock
                    width 16px
                    opacity 0

        .timeline-container
            display flex
            flex-direction column
            flex 1
            background-color $pane-background

        .timeline-lane-container
            disable-scrollbar()
            flex 1
            padding-bottom 20px
            overflow auto

        .timeline-lane
            border-bottom 1px solid rgba(#fff, .1)

            &.dragover
                background-color rgba(#fff, .2)

            &.--expand
                .timeline-lane-keyframes
                    display block

        .timeline-lane-clips
            position relative
            display block
            height 24px
            padding 1px 0
            padding-left 4px
            overflow visible

        .timeline-lane-keyframes
            display none
            width 100%
            overflow hidden

    .timelineRegion
        height 50%

    .keyframeGraphRegion
        height 50%

.scaleLabel
    display inline-flex
    align-items center
    font-size 12px

.scaleList
    width 200px
    border 1px solid $color-dropdown-border
    background-color $color-dropdown-bg
    transform translateY(6px)
