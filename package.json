{
  "private": true,
  "name": "delir",
  "productName": "delir",
  "description": "Video production with JavaScript",
  "version": "0.6.2",
  "author": "Ragg <ragg.devpr@gmail.com>",
  "license": "MIT",
  "main": "browser/main.js",
  "scripts": {
    "dev": "cross-env electron-rebuild && cross-env DELIR_ENV=dev gulp",
    "rebuild": "cross-env electron-rebuild",
    "build": "cross-env DELIR_ENV=production gulp publish",
    "declare": "cross-env tsc -p src/delir-core -d --declarationDir src/delir-core/types",
    "clean-modules": "rm -rf node_modules/ packages/delir/node_modules packages/delir-core/node_modules",
    "test-core": "jest -c packages/core/jest.config.js",
    "test-front": "jest -c packages/delir/jest.config.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "7.4.3",
    "@babel/plugin-transform-modules-commonjs": "7.4.3",
    "@babel/preset-env": "7.5.0",
    "@babel/register": "7.4.0",
    "babel-loader": "8.0.6",
    "clean-webpack-plugin": "2.0.1",
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "css-modules-require-hook": "4.2.3",
    "download": "7.1.0",
    "electron": "4.1.4",
    "electron-builder": "21.0.15",
    "electron-devtools-installer": "2.2.4",
    "electron-icon-maker": "0.0.4",
    "electron-rebuild": "1.8.4",
    "file-loader": "4.0.0",
    "fork-ts-checker-webpack-plugin": "1.3.7",
    "fs-extra": "7.0.1",
    "gulp": "4.0.0",
    "gulp-babel": "8.0.0",
    "gulp-load-plugins": "1.6.0",
    "gulp-plumber": "1.2.1",
    "gulp-pug": "4.0.1",
    "husky": "2.4.1",
    "jsdom": "14.0.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "8.1.5",
    "monaco-editor-webpack-plugin": "1.7.0",
    "nib": "1.1.2",
    "node-notifier": "5.4.0",
    "prettier": "1.17.0",
    "raw-loader": "2.0.0",
    "react-test-renderer": "16.8.6",
    "style-loader": "0.23.1",
    "stylus": "0.54.5",
    "stylus-loader": "3.0.2",
    "ts-loader": "5.3.3",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.5.2",
    "webpack": "4.35.0",
    "zip-dir": "1.0.2"
  },
  "dependencies": {
    "font-manager": "0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
