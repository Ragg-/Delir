{
  "private": true,
  "name": "delir",
  "productName": "delir",
  "description": "Video production with JavaScript",
  "version": "0.6.2",
  "author": "Ragg <ragg.devpr@gmail.com>",
  "license": "MIT",
  "main": "browser/main.js",
  "scripts": {
    "start": "cross-env electron-rebuild && cross-env NODE_ENV=development gulp",
    "rebuild": "cross-env electron-rebuild",
    "build": "cross-env NODE_ENV=production gulp publish",
    "declare": "cross-env tsc -p src/delir-core -d --declarationDir src/delir-core/types",
    "clean-modules": "rm -rf node_modules/ packages/delir/node_modules packages/delir-core/node_modules",
    "test-core": "jest -c packages/core/jest.config.js",
    "test-front": "jest -c packages/delir/jest.config.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "css-modules-require-hook": "4.2.3",
    "download": "7.1.0",
    "electron": "6.0.0",
    "electron-builder": "21.1.5",
    "electron-devtools-installer": "2.2.4",
    "electron-icon-maker": "0.0.4",
    "electron-rebuild": "1.8.5",
    "file-loader": "4.1.0",
    "fork-ts-checker-webpack-plugin": "1.3.7",
    "fs-extra": "8.1.0",
    "gulp": "4.0.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.0.2",
    "jsdom": "15.1.1",
    "jsdom-global": "3.0.2",
    "lint-staged": "9.2.1",
    "monaco-editor-webpack-plugin": "1.7.0",
    "node-notifier": "5.4.1",
    "prettier": "1.17.0",
    "prettier-stylelint": "0.4.2",
    "raw-loader": "3.1.0",
    "react-test-renderer": "16.8.6",
    "sass": "1.22.9",
    "sass-loader": "7.2.0",
    "style-loader": "0.23.1",
    "stylelint": "10.1.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "18.3.0",
    "ts-loader": "6.0.4",
    "ts-node": "8.1.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.5.3",
    "webpack": "4.38.0",
    "zip-dir": "1.0.2"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{sass,scss,css}": [
      "stylelint",
      "git add"
    ]
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/delirvfx"
  }
}
